{
  "name": "Hatrack",
  "version": "0",
  "description": "Wear different hats in different windows.",
  "author": "Jess Austin",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    },
    "default_popup": "popup.html",
    "default_title": "click to wear a different hat!"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "storage"
  ],
  "optional_permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://*/*"
  ],
  "manifest_version": 2
}
